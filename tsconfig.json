{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2020",
        "sourceMap": true,
        "lib": [
            "esnext"
        ],
        "noImplicitUseStrict": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}